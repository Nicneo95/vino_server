{{#extends 'base'}}

{{#block 'content'}}
<h1>User</h1>
<a href="/user/create" class="btn btn-secondary">Add New</a>
<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>User Type</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		{{#each user}}
		<tr>
			<td>{{this.id}}</td>
			<td>{{this.first_name}}</td>
			<td>{{this.last_name}}</td>
			<td>{{this.email}}</td>
			<td>{{this.user_type.name}}</td>
			<td>
				<a href="/user/{{this.id}}/update" class="btn btn-secondary btn-sm">Update</a>
				<a href="/user/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>
{{/block}}

{{/extends}}