{{#extends 'base'}}

{{#block "content"}}
<h1>Bottle Size</h1>
<a role="button" class="btn btn-secondary" href="/product-information/size/create">Add New</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Volume in ml</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each size}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.volume}}</td>
            <td>
                <a class="btn btn-secondary btn-sm" href="/product-information/size/{{this.id}}/update">Update</a>
                <a class="btn btn-danger btn-sm" href="/product-information/size/{{this.id}}/delete">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/block}}

{{/extends}}