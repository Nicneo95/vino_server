{{#extends 'base'}}

{{#block "content"}}
  <h1>Producer</h1>
  <a role="button" class="btn btn-primary" href="/product-information/producer/create">Add New Producer</a>

  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each producer}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.name}}</td>
        <td>{{this.description}}</td>
        <td>
          <a class="btn btn-primary btn-sm" href="/product-information/producer/{{this.id}}/update">Update</a>
          <a class="btn btn-danger btn-sm" href="/product-information/producer/{{this.id}}/delete">Delete</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

{{/block}}

{{/extends}}